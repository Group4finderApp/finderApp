<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_width="match_parent"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="AlbumName"
            android:background="@color/cardTransparent"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:background="@color/cardTransparent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cameraicon"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/camera"/>
            <TextView
                android:id="@+id/tvPicCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cameraicon"
                android:layout_alignBottom="@+id/cameraicon"
                android:layout_alignTop="@+id/cameraicon"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="PictureCount"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>